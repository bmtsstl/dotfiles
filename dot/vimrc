	let &t_SI .= "\e[5 q"
	let &t_SR .= "\e[3 q"
	let &t_EI .= "\e[1 q"
endif
setglobal guicursor=a:block-blinkwait1000-blinkon500-blinkoff500-Cursor/lCursor
setglobal guicursor+=i-ci:ver10-blinkwait1000-blinkon500-blinkoff500-Cursor/lCursor
